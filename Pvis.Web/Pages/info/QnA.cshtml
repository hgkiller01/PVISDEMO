@page
@model Pvis.Web.Pages.info.QnAModel
@{
    ViewData["Title"] = "問與答";
}
<div class="container py-1 accordion">
    @if (Model.Data.C0 != null)
    {
        <h3 class="h4">※ 廢太陽光電板回收處理機制</h3>
        <div data-cfw="accordion" class="mb-1">

            @for (int i = 0; i < Model.Data.C0.Count; i++)
            {
                var item = Model.Data.C0[i];
                <div class="card">
                    <div class="card-header h5">
                        <a href="#q0@(i)" data-cfw="collapse" class="fas fa-plus">
                            Q@(i + 1).@(item.Q)
                        </a>
                    </div>
                    <div id="q0@(i)" class="collapse">
                        <div class="card-body">
                            @(item.A)
                        </div>
                    </div>
                </div>
            }

        </div>
    }

    @if (Model.Data.C1 != null)
    {
        <h3 class="h4">※ 帳號登入相關問題</h3>
        <div data-cfw="accordion" class="mb-1">
            @for (int i = 0; i < Model.Data.C1.Count; i++)
            {
