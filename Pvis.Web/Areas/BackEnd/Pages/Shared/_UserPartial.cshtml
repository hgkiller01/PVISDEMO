@using Microsoft.AspNetCore.Identity
@inject SignInManager<MyAppUser> SignInManager
@inject UserManager<MyAppUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item dropdown no-arrow">
        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <span class="mr-2 d-none d-lg-inline text-gray-600 small">@User.GetCompanyName()</span>
            <img class="img-profile rounded-circle" alt="頭像" src="@(User.GetGravatarUrl())?s=60">
        </a>
        <!-- Dropdown - User Information -->
        <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in" aria-labelledby="userDropdown">
            <a class="dropdown-item" asp-area="BackEnd" asp-page="/Account/Profile">
                <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i>
                個人資料維護
            </a>
            <a class="dropdown-item" asp-area="BackEnd" asp-page="/Account/ChangePassword">
                <i class="fas fa-cogs fa-sm fa-fw mr-2 text-gray-400"></i>
                密碼變更
            </a>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item" asp-area="BackEnd" asp-page="/Login" asp-route-id="logout">
                <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                登出
            </a>
        </div>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="BackEnd" asp-page="Login">Login</a>
    </li>
}

