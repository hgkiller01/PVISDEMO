    <meta name="theme-color" content="#e84">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="@SysConfig.Cfg.SiteName">
    <meta name="keywords" content="太陽能,光電板">
    <link rel="icon" href="~/img/favicon.png">
    @*<link rel="stylesheet" href="//cdn.jsdelivr.net/npm/figuration@3.0.5/dist/css/figuration.min.css">*@
