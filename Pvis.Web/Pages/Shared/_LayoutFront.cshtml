    <link async href="~/lib/font-awesome/css/v4-shims.css" rel="stylesheet" />
    @*<link href="https://use.fontawesome.com/releases/v5.10.0/css/v4-shims.css" rel="stylesheet" />*@
    <link rel="stylesheet" href="~/css/front.css" asp-append-version="true" />
    @*<script src="//cdn.jsdelivr.net/combine/npm/jquery@3.5.1,npm/figuration@3.0.5"></script>*@
