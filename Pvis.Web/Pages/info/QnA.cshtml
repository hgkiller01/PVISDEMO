                    <div class="card-header h5">
                        <a href="#q1@(i)" data-cfw="collapse" class="fas fa-plus">
                            Q@(i + 1).@(item.Q)
                        </a>
                    </div>
                    <div id="q1@(i)" class="collapse">
                        <div class="card-body">
                            @(item.A)
                        </div>
                    </div>
                </div>
            }

        </div>
    }

    @if (Model.Data.C2 != null)
    {
        <h3 class="h4">※ 線上登記排出廢太陽光電板相關問題</h3>
        <div data-cfw="accordion" class="mb-1">
            @for (int i = 0; i < Model.Data.C2.Count; i++)
            {
                var item = Model.Data.C2[i];
                <div class="card">
                    <div class="card-header h5">
                        <a href="#q2@(i)" data-cfw="collapse" class="fas fa-plus">
                            Q@(i + 1).@(item.Q)
                        </a>
                    </div>
                    <div id="q2@(i)" class="collapse">
                        <div class="card-body">
                            @(item.A)
                        </div>
                    </div>
                </div>
            }

        </div>
    }
</div>

